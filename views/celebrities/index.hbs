<h1>Celebrities Database</h1>

{{#each celebrity}}
<div id="resource-{{_id}}">
<a href="/celebrities/{{_id}}" class="links-that-are-invisible"><h2 class="heading-in-index-list-of-all-celebrities"> ★ {{name}}</h2></a>
</div>

<form method="POST" action="/celebrities/{{_id}}/delete">
<label for="deleting-celebrity" hidden>Delete Celebrity</label>
<button class="button-delete-celebrity">⚠ Delete Celebrity</button>
</form>


{{/each}}


<form action="/celebrities/create">
<button class="create-new-xxx-button">Missing a Celebrity?</button>
</form>