
<h2>Please help us setting things straight</h2>

{{#with singleMovie}}

<form action="/movies/{{_id}}" method="POST" class="create-movie-inputs">

<label for="movie-title" >Title: </label>
<input type="text" id="movie-title" name="title" placeholder="Title" value="{{title}}">

<label for="movie-genre" >Genre: </label>
<input type="text" id="movie-genre" name="genre" placeholder="Genre" value="{{genre}}">

<label for="movie-plot" >Plot: </label>
<textarea id="movie-plot" name="plot" placeholder="Plot">{{plot}} </textarea>

<button>Update!</button>
</form>

{{/with}}